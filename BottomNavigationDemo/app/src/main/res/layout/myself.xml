<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:leon="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/shiep"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="智能仓储APP"
            android:textSize="16sp" />
    </LinearLayout>


    <com.leon.lib.settingview.LSettingItem
        android:id="@+id/change_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:leftIcon="@drawable/password"
        leon:leftText="修改密码" />

    <com.leon.lib.settingview.LSettingItem
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:leftIcon="@drawable/calendar"
        leon:leftText="日历" />

    <com.leon.lib.settingview.LSettingItem
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:isShowUnderLine="false"
        leon:leftIcon="@drawable/map"
        leon:leftText="我的位置"
        leon:rightStyle="iconSwitch" />

    <com.leon.lib.settingview.LSettingItem
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:leftIcon="@drawable/about"
        leon:leftText="关于我们"
        leon:rightStyle="iconHide"/>

</LinearLayout>